{
  "providerId": "magneticbyteinternettechnologiesopcpvtltd.in",
  "serviceId": "email-auth",
  "serviceName": "Business Suite Email Authentication",
  "description": "Configures DKIM (2 CNAMEs) and DMARC (TXT) for outbound mail authentication.",
  "version": 1,
  "syncPubKeyDomain": "keys.magneticbyteinternettechnologiesopcpvtltd.in",
  "syncRedirectDomain": "auth.magneticbyteinternettechnologiesopcpvtltd.in",
  "variableDescription": "Variables used to fill DKIM selectors and DMARC reporting.",
  "variables": [
    { "name": "selector1", "description": "First DKIM selector", "required": true },
    { "name": "selector2", "description": "Second DKIM selector", "required": true },
    { "name": "rua",       "description": "DMARC aggregate report URI", "required": true }
  ],
"records": [
  {
    "type": "CNAME",
    "host": "{selector1}._domainkey",
    "pointsTo": "{selector1}.domainkey.your-svc.net.",
    "ttl": 3600
  },
  {
    "type": "CNAME",
    "host": "{selector2}._domainkey",
    "pointsTo": "{selector2}.domainkey.your-svc.net.",
    "ttl": 3600
  },
  {
    "type": "TXT",
    "host": "_dmarc",
    "data": "v=DMARC1; p=none; rua={rua}; fo=1; sp=none",
    "ttl": 3600
  }
]
}
