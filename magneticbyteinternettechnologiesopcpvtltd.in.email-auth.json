{
  "providerId": "magneticbyteinternettechnologiesopcpvtltd.in",
  "serviceId": "email-auth",
  "version": 2,
  "description": "Authenticate email sending (DKIM + DMARC)",
  "syncRedirectDomain": "auth.magneticbyteinternettechnologiesopcpvtltd.in",
  "syncPubKeyDomain": "keys.magneticbyteinternettechnologiesopcpvtltd.in",
  "records": [
    { "type": "CNAME", "host": "{selector1}._domainkey", "pointsTo": "{selector1}.domainkey.your-svc.net.", "ttl": 3600 },
    { "type": "CNAME", "host": "{selector2}._domainkey", "pointsTo": "{selector2}.domainkey.your-svc.net.", "ttl": 3600 },
    { "type": "TXT",   "host": "_dmarc", "value": "v=DMARC1; p=none; rua={rua}", "ttl": 3600 }
  ],
  "variableDescription": {
    "selector1": "Primary DKIM selector (e.g., k1)",
    "selector2": "Secondary DKIM selector (e.g., k2)",
    "rua": "DMARC aggregate report URI"
  }
}
